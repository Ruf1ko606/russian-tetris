source 'https://rubygems.org'

# Веб-фреймворк для создания приложения
gem 'sinatra'
# Утилиты для Sinatra, включая перезагрузку кода при разработке
gem 'sinatra-contrib'
# Rack-сервер для запуска приложения
gem 'rack'
# Драйвер для подключения к базе данных PostgreSQL
gem 'pg'
# Для упрощения работы с JSON
gem 'json'
gem 'rackup'
gem 'webrick'
